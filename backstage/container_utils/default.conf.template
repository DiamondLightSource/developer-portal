server {
    listen 80;
    server_name 0.0.0.0;

    location / {
        root /usr/share/nginx/html;
        index index.html index.htm;
        try_files $uri /index.html;
    }

    location /healthcheck {
        return 204;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/ngixn/html;
    }
}
